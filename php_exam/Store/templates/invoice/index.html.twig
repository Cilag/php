{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <h1>Invoice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User_id</th>
                <th>Transaction_date</th>
                <th>Billing_total</th>
                <th>Billing_adress</th>
                <th>Billing_city</th>
                <th>Billing_zip_code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.userId }}</td>
                <td>{{ invoice.transactionDate ? invoice.transactionDate|date('Y-m-d') : '' }}</td>
                <td>{{ invoice.billingTotal }}</td>
                <td>{{ invoice.billingAdress }}</td>
                <td>{{ invoice.billingCity }}</td>
                <td>{{ invoice.billingZipCode }}</td>
                <td>
                    <a href="{{ path('app_invoice_show', {'id': invoice.id}) }}">show</a>
                    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_invoice_new') }}">Create new</a>
{% endblock %}
